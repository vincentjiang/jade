<h1>用户列表</h1>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>邮箱地址</th>
        <th>英文名</th>
        <th>中文名</th>
        <th>英文职称</th>
        <th>中文职称</th>
        <th>权限</th>
        <th>动作</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.ename %></td>
          <td><%= user.cname %></td>
          <td><%= user.etitle %></td>
          <td><%= user.ctitle %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to ' 查看', user, class: "btn btn-info btn-xs fa fa-eye" %>
            <%= link_to ' 编辑', edit_user_path(user), class: "btn btn-warning btn-xs fa fa-pencil" %>
            <%= link_to ' 删除', user, method: :delete, data: { confirm: "您真的想删除 #{user.ename} 吗？" }, class: "btn btn-danger btn-xs fa fa-trash-o" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

