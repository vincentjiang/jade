<h1>Listing users</h1>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Email</th>
        <th>Ename</th>
        <th>Cname</th>
        <th>Etitle</th>
        <th>Ctitle</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.ename %></td>
          <td><%= user.cname %></td>
          <td><%= user.etitle %></td>
          <td><%= user.ctitle %></td>
          <td>
            <%= link_to ' Show', user, class: "btn btn-info btn-xs fa fa-eye" %>
            <%= link_to ' Edit', edit_user_path(user), class: "btn btn-warning btn-xs fa fa-pencil" %>
            <%= link_to ' Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs fa fa-trash-o" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to ' New User', new_user_path, class: "btn btn-success btn-sm fa fa-user" %>
