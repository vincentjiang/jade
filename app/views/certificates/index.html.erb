<h1>Listing certificates</h1>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Report no</th>
        <th>Is hoklas</th>
        <th>Date test</th>
        <th>Date issue</th>
        <th>Img url</th>
        <th>User</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @certificates.each do |certificate| %>
        <tr>
          <td><%= certificate.report_no %></td>
          <td><%= certificate.is_hoklas %></td>
          <td><%= certificate.date_test %></td>
          <td><%= certificate.date_issue %></td>
          <td><%= certificate.img_url %></td>
          <td><%= certificate.user_id %></td>
          <td>
            <%= link_to ' Show', certificate, class: "btn btn-info btn-xs fa fa-eye" %>
            <%= link_to ' Edit', edit_certificate_path(certificate), class: "btn btn-warning btn-xs fa fa-pencil" %>
            <%= link_to ' Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs fa fa-trash-o" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to ' New Certificate', new_certificate_path, class: "btn btn-success btn-sm fa fa-user" %>
