<h1>Updating password</h1>

<%= form_tag update_password_path, class: "form-horizontal" do  %>

  <div class="form-group">
    <%= label_tag 'password_current', 'Current password', class: "control-label col-sm-2" %>
    <div class="col-sm-4">
    	<%= password_field_tag :password_current, params[:password_current], class: "form-control", placeholder: "current password", required: true, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'password_new', 'New password', class: "control-label col-sm-2" %>
    <div class="col-sm-4">
    	<%= password_field_tag :password_new, params[:password_new], class: "form-control", placeholder: "new password", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'password_new_confirmation', 'Verify password', class: "control-label col-sm-2" %>
    <div class="col-sm-4">
    	<%= password_field_tag :password_new_confirmation, params[:password_new_confirmation], class: "form-control", placeholder: "new password again", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Submit', class: "btn btn-success" %> <%= link_to 'Back', :back, class: "btn btn-link" %>
    </div>
  </div>

<% end %>