<h1 class="text-center" style="margin: 30px 0;">请登录</h1>

<div class="row">
	<div class="col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
		<%= form_tag login_path do %>
		  <div class="input-group">
			  <span class="input-group-addon"><i class="fa fa-envelope-o fa-2x fa-fw"></i></span>
				<%= email_field_tag :email, params[:email], class: "form-control input-lg", placeholder: "请输入你的邮箱", required: true, autofocus: true %>
			</div>

			<br>

		  <div class="input-group">
			  <span class="input-group-addon"><i class="fa fa-key fa-2x fa-fw"></i></span>
				<%= password_field_tag :password, params[:password], class: "form-control input-lg", placeholder: "密码", required: true %>
			</div>

			<br>
			
			<div class="pull-left">
				<div class="checkbox">
	        <label>
	          <input type="checkbox"> 记住我
	        </label>
	      </div>
	    </div>
			
			<div class="pull-right">
				<a href="" class="btn btn-link">忘记密码？</a>
			</div>

			<br>

			<button type="submit" class="btn btn-block btn-primary btn-lg" data-loading-text="努力登录中...">登录</button>

		<% end %>
	</div>
</div>

<script type="text/javascript">
/*
 * 初始化按钮的loading功能，点击后将显示Loading字样，并且按钮被disabled掉，无法连续点击，防止二次提交
 * 超过3秒后按钮将恢复原状
 */
$('button[data-loading-text]').click(function () {
    var btn = $(this).button('loading');
    setTimeout(function () {
        btn.button('reset');
    }, 3000);
});

</script>