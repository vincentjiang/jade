<h1>Listing roles</h1>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Desc</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.desc %></td>
          <td>
            <%= link_to ' Show', role, class: "btn btn-info btn-xs fa fa-eye" %>
            <%= link_to ' Edit', edit_role_path(role), class: "btn btn-warning btn-xs fa fa-pencil" %>
            <%= link_to ' Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs fa fa-trash-o" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Role', new_role_path, class: "btn btn-success btn-sm fa fa-user" %>
